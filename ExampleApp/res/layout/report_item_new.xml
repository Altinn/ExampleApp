<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.altinn.apps.fisher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/send_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:src="@drawable/social_send_now_b"
         />

    <com.altinn.apps.fisher.ui.component.RTextView
        android:id="@+id/date_item"
        style="@style/FORM_LABEL_HEAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin_min"
        android:layout_toRightOf="@+id/send_icon"
        android:text="01.09.13"
        android:textSize="@dimen/fs_m1"
        app:typeface="roboto_medium" />

    <com.altinn.apps.fisher.ui.component.RTextView
        android:id="@+id/time_item"
        style="@style/FORM_LABEL_HEAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/date_item"
        android:layout_marginRight="@dimen/right_margin_min"
        android:text="kl.09:30"
        android:textSize="@dimen/fs_m1"
        app:typeface="roboto_medium" />

    <com.altinn.apps.fisher.ui.component.RTextView
        android:id="@+id/title_item"
        style="@style/HOME_SCREEN_MENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_item"
        android:layout_toRightOf="@+id/send_icon"
        android:gravity="left"
        android:padding="0dp"
        android:text="OS123 Fiskemottak1"
        android:textSize="@dimen/fs_m5"
        app:typeface="roboto_medium" />

    <com.altinn.apps.fisher.ui.component.RTextView
        android:id="@+id/label_item"
        style="@style/HOME_SCREEN_MENU_SUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_item"
        android:layout_below="@+id/title_item"
        android:padding="0dp"
        android:text="@string/lbl_recipient_off"
        android:textSize="@dimen/fs_m3"
        app:typeface="roboto_medium" />

    <com.altinn.apps.fisher.ui.component.RTextView
        android:id="@+id/label_value"
        style="@style/HOME_SCREEN_MENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label_item"
        android:layout_toRightOf="@+id/label_item"
        android:layout_marginLeft="@dimen/left_margin_min"
        android:padding="0dp"
        android:text="Torsk"
        android:textSize="@dimen/fs_m2"
        app:typeface="roboto_medium" />

    <View
        android:id="@+id/seperator"
        style="@style/SEPERATOR"
        android:layout_height="1dp"
        android:layout_below="@+id/label_value"
        android:layout_marginTop="@dimen/top_margin_min" />

</RelativeLayout>